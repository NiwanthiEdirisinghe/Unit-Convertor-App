<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/backGround"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/title"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:paddingBottom="16dp"
        android:layout_marginBottom="50dp"/>


    <Spinner
        android:id="@+id/unitType"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@android:drawable/btn_dropdown"
        android:entries="@array/categories_array"
        android:padding="8dp"
        />

    <Spinner
        android:id="@+id/sourceUnit"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:padding="8dp" />

    <ImageView
        android:id="@+id/convertIcon"
        android:layout_width="63dp"
        android:layout_height="73dp"
        android:layout_gravity="center"
        android:paddingVertical="8dp"
        android:src="@drawable/img_1" />

    <Spinner
        android:id="@+id/destinationUnit"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:padding="8dp"
        android:layout_marginBottom="50dp"/>

    <EditText
        android:id="@+id/inputValue"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:hint="@string/enter_value"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:background="@android:drawable/editbox_background"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/convertButton"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:text="@string/convert"
        android:textStyle="bold"
        android:backgroundTint="@color/convertButton"
        android:textColor="@android:color/white"
        android:layout_marginTop="12dp"
        android:textSize="@dimen/covertButtonText"
        android:paddingVertical="10dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/resultText"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/result"
        android:textColor="@android:color/white"
        android:textSize="@dimen/result"
        android:textStyle="bold" />
</LinearLayout>